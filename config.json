{
  "inputs": {
    "qlab": {
      "className": "qlab",
      "settings": {
        "#listenIP": "IP to listen on for OSC responses",
        "listenIP": "0.0.0.0",
        "port": 53001,
        "linkedOutput": "qlab-macmini"
      }
    },
    "GPIObuttons": {
      "className": "GPIObuttons",
      "settings": {
        "#debounceTime": "Time to wait for change of state",
        "debounceTime": 0.2,
        "#repeatTime": "Time before other switch can be used",
        "repeatTime": 0.05
      }
    },
    "screenKeepAliveTimer": {
      "className": "timer",
      "settings": {
        "#timer": "Time in seconds between each action trigger",
        "timer": 30,
        "#runOnStart": "If True, runs when class initialises, otherwise just runs after first timer",
        "runOnStart": true
      }
    },
    "qlabKeepAliveTimer": {
      "className": "timer",
      "settings": {
        "#timer": "Time in seconds between each action trigger",
        "timer": 5,
        "#runOnStart": "If True, runs when class initialises, otherwise just runs after first timer",
        "runOnStart": true
      }
    }
  },
  "outputs": {
    "debugLog": {
      "className": "log",
      "level": "debug"
    },
    "qlab-macmini": {
      "className": "qlab",
      "settings": {
        "ip": "192.168.5.104",
        "port": 53000
      }
    },
    "unblankScreen": {
      "className": "unblankScreen"
    },
    "screen": {
      "className": "screenOutput",
      "settings": {
        "areas": {
          "showTitle": {
            "x": 0,
            "y": 0
          },
          "currentTitle": {
            "x": 0,
            "y": 2,
            "staticText": "Current cue"
          },
          "currentCue": {
            "x": 0,
            "y": 3,
            "colourFunction": "white_on_red"
          },
          "nextTitle": {
            "x": 0,
            "y": 4,
            "staticText": "Next cue"
          },
          "nextCue": {
            "x": 0,
            "y": 5,
            "colourFunction": "black_on_green"
          },
          "toast": {
            "x": 21,
            "y": 6
          }
        },
        "toast": {
          "area": "toast",
          "duration": 3
        }
      }
    }
  },
  "actions": [
    {
      "inputName": "qlab",
      "OSC-/reply/workspace/*/thump": {
        "description": "Respond to a basic qlab heartbeat",
        "outputName": "screen",
        "toast": "â™¥"
      },
      "playheadChanged": {
        "description": "Update screen with new Cue name",
        "outputName": "screen",
        "area": "nextCue" 
      },
      "cueChanged": {
        "description": "Update screen with running Cue name",
        "outputName": "screen",
        "area": "currentCue" 
      }
    },
    {
      "inputName": "GPIObuttons",
      "GPIO-18": {
        "description": "Go",
        "outputName": "qlab-macmini",
        "messageList": [
          { "message": "/stop" },
          { "message": "/runningCues" },
          { "message": "/go" }
        ]
      },
      "GPIO-27": {
        "description": "Stop",
        "outputName": "qlab-macmini",
        "messageList": [
          { "message": "/stop" },
          { "message": "/runningCues" }
        ]
      },
      "GPIO-22": {
        "description": "Pause",
        "outputName": "qlab-macmini",
        "message": "/pause"
      },
      "GPIO-23": {
        "description": "Power",
        "comment": "power"
      }
    },
    {
      "inputName": "screenKeepAliveTimer",
      "description": "Timer which keeps the screen alive",
      "timer": {
        "outputName": "unblankScreen"
      }
    },
    {
      "inputName": "qlabKeepAliveTimer",
      "description": "Timer which sends a heartbeat to qlab",
      "timer": {
        "outputName": "qlab-macmini",
        "message": "/thump"
      }
    }
  ],
  "startupActions": [
    {
      "outputName": "qlab-macmini",
      "messageList": [
        {
          "message": "/updates",
          "value": 1
        },{
          "message": "/alwaysReply",
          "value": 1
        },{
          "message": "/cue/selected/displayName"
        },{
          "message": "/runningCues"
        }
      ]
    }
  ],  
  "logging": {
    "version": 1,
    "disable_existing_loggers": "True",
    "formatters": {
      "standard": {
        "format": "%(asctime)s - %(levelname)s - %(module)s - %(message)s"
      }
    },
    "handlers": {
      "file": {
        "level": "DEBUG",
        "formatter": "standard",
        "class": "logging.handlers.RotatingFileHandler",
        "filename": "show.log",
        "mode": "w",
        "backupCount": 5
      }
    },
    "loggers": { },
    "root": {
        "handlers": ["file"],
        "level": "DEBUG"
    }
  }
}
 