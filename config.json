{
  "inputs": {
    "qlab": {
      "className": "qlab",
      "settings": {
        "#listenIP": "IP to listen on for OSC responses",
        "listenIP": "0.0.0.0",
        "port": 53001
      }
    },
    "GPIObuttons": {
      "className": "GPIObuttons",
      "settings": {
        "#debounceTime": "Time to wait for change of state",
        "debounceTime": 0.2,
        "#repeatTime": "Time before other switch can be used",
        "repeatTime": 0.05
      }
    },
    "screenKeepAliveTimer": {
      "className": "timer",
      "settings": {
        "#timer": "Time in seconds between each action trigger",
        "timer": 30,
        "#runOnStart": "If True, runs when class initialises, otherwise just runs after first timer",
        "runOnStart": true
      }
    },
    "qlabKeepAliveTimer": {
      "className": "timer",
      "settings": {
        "#timer": "Time in seconds between each action trigger",
        "timer": 30,
        "#runOnStart": "If True, runs when class initialises, otherwise just runs after first timer",
        "runOnStart": true
      }
    }
  },
  "outputs": {
    "debugLog": {
      "className": "log",
      "level": "debug"
    },
    "qlab-macmini": {
      "className": "qlab",
      "settings": {
        "ip": "192.168.5.104",
        "port": 53000
      }
    },
    "unblankScreen": {
      "className": "unblankScreen"
    },
    "screen": {
      "className": "screenOutput",
      "settings": {
        "#width,height": "8x22 with Terminus 28x14",
        "areas": {
          "showTitle": {
            "x": 0,
            "y": 0,
            "align": "centre"
          },
          "currentTitle": {
            "x": 0,
            "y": 2,
            "align": "left",
            "staticText": "Current cue"
          },
          "currentCue": {
            "x": 0,
            "y": 3,
            "align": "right"
          }
        }
      }
    }
  },
  "actions": [
    {
      "inputName": "qlab",
      "*": {
        "description": "OSC Log",
        "outputName": "debugLog"
      },
      "*/thump": {
        "description": "Respond to a basic qlab heartbeat",
        "outputName": "screen",
        "toast": "â™¥",
        "toastDuration": 2
      }
    },
    {
      "inputName": "GPIObuttons",
      "GPIO-18": {
        "description": "Go",
        "outputName": "qlab-macmini",
        "message": "/go"
      },
      "GPIO-27": {
        "description": "Panic",
        "outputName": "qlab-macmini",
        "message": "/panic"
      },
      "GPIO-22": {
        "description": "Pause",
        "outputName": "qlab-macmini",
        "message": "/pause"
      },
      "GPIO-23": {
        "description": "Power",
        "comment": "power"
      }
    },
    {
      "inputName": "screenKeepAliveTimer",
      "description": "Timer which keeps the screen alive",
      "timer": {
        "outputName": "unblankScreen"
      }
    },
    {
      "inputName": "qlabKeepAliveTimer",
      "description": "Timer which sends a heartbeat to qlab",
      "timer": {
        "outputName": "qlab-macmini",
        "message": "/thump"
      }
    },
    {
      "inputName": "qlabKeepAliveTimer",
      "description": "Timer which ensures we receive workspace updates",
      "timer": {
        "outputName": "qlab-macmini",
        "message": "/updates",
        "value": 1
      }
    }
  ],
  "logging": {
    "version": 1,
    "disable_existing_loggers": "True",
    "formatters": {
      "standard": {
        "format": "%(asctime)s - %(levelname)s - %(module)s - %(message)s"
      }
    },
    "handlers": {
      "file": {
        "level": "DEBUG",
        "formatter": "standard",
        "class": "logging.handlers.RotatingFileHandler",
        "filename": "show.log",
        "mode": "w",
        "backupCount": 5
      }
    },
    "loggers": { },
    "root": {
        "handlers": ["file"],
        "level": "DEBUG"
    }
  }
}
 